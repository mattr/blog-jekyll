---
layout: nil
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>{{ site.title }}</title>
    <link>{{ site.base }}</link>
    <language>en</language>
    <webMaster>{{ site.email }} ({{ site.author }})</webMaster>
    <pubDate>{{ site.time | date_to_xmlschema }}</pubDate>
    <copyright>Copyright 2008-2010</copyright>
    <ttl>60</ttl>
    <description>Programming, music, pirates, whatever.</description>
    {% for post in site.posts limit:10 %}
    <item>
      <title>{{ post.title }}</title>
      <link>{{ site.base }}{{ post.url }}</link>
      <pubDate>{{ post.date }}</pubDate>
      <guid>{{ site.base }}/archives{{ post.id }}/</guid>
      <description>{{ post.content | xml_escape }}</description>
      {% for topic in post.topics %}
      <category domain="{{ site.base }}/tags/{{ topic }}">{{ topic }}</category>
      {% endfor %}
    </item>
    {% endfor %}
  </channel>
</rss>
